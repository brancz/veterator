= form_for @authentication_token do |f|
  - if @authentication_token.errors.any?
    #error_explanation
      %h2= "#{pluralize(@authentication_token.errors.count, "error")} prohibited this authentication_token from being saved:"
      %ul
        - @authentication_token.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :token
    = f.text_field :token
  .field
    = f.label :valid_until
    = f.datetime_select :valid_until
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
