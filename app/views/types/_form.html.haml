= form_for(@type) do |f|
  - if @type.errors.any?
    #error_explanation
      %h2
        = pluralize(@type.errors.count, "error")
        prohibited this type from being saved:
      %ul
        - @type.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :name, placeholder: 'Type name'
  .actions
    = f.submit class: 'button'
