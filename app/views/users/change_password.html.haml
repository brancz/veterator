%h1 Change your password
%br/
= form_for(current_user, url: { action: 'update_password' }, html: { method: :patch } ) do |f|
  -if @user.errors.any?
    -@user.errors.full_messages.each do |error|
      %p.alert-box.info.radius
        = error
        = link_to '#', class: 'close' do
          &times;
  %div
    = f.label :password
    %i (leave blank if you don't want to change it)
    %br/
    = f.password_field :password, autocomplete: "off", autofocus: true, placeholder: 'New password'
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, placeholder: 'Confirm new password'
  %div
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password, placeholder: 'Old password'
  = f.submit 'Change password', class: 'button'
