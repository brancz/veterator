%div.clearfix.panel
  %div.row
    %div.medium-9.columns
      %h1.text-center.show-for-small-only Your Sensors
      %h1.show-for-medium-up Your Sensors
    %div.medium-3.columns
      = link_to ' New Sensor', new_sensor_path, class: 'button fi-plus right show-for-medium-up'
      = link_to ' New Sensor', new_sensor_path, class: 'button fi-plus show-for-small-only'
- @sensors.each do |sensor|
  .row
    .panel.medium-6.small-12.columns
      %h3
        = link_to sensor.name, sensor
        = "(#{sensor.unit.name})"
        = link_to '', sensor, method: :delete, data: { confirm: 'Are you sure?' }, class: 'fi-x right'
        = link_to '', edit_sensor_path(sensor), class: 'fi-pencil right'
      = link_to sensor_records_path(sensor) do
        .chart-preview
          %h3.text-center Le Preview
      %h5 Last 24 Hours
      %ul.inline-list
        %li
          Min:
          = 0
        %li
          Max:
          = 0
        %li
          Q1:
          = 0
        %li
          Q2:
          = 0
        %li
          Q3:
          = 0
        %li
          IQR:
          = 0
