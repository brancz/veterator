<div class="panel-heading">
  <h2>
    <span><%= @sensor.title %></span>
    <small><%= @sensor.description %></small>
  </h2>
</div>

<div class="panel-body">
  <svg id="graph"></svg>
  <div class="row">
    <div class="col-sm-2 col-sm-offset-7">
      <p class="text-right"><strong>Timestamp</strong></p>
      <p class="text-right"><strong>Value</strong></p>
    </div>
    <div class="col-sm-3">
      <p><span id="created_at"></span></p>
      <p><span id="value"></span> </p>
    </div>
  </div>
  <script>createLineChartFor(<%= @sensor.id %>, "#graph", true);</script>
</div>

