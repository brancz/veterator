!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "OSHome"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    .contain-to-grid
      %nav.top-bar{"data-topbar" => ""}
        %ul.title-area
          %li.name
            %h1= link_to 'OSHome', sensors_path
        %section.top-bar-section
          %ul.left
            - if user_signed_in?
              %li= link_to ' Sensors', sensors_path, class: 'fi-graph-trend'
              %li= link_to 'API Tokens', authentication_tokens_path
          %ul.right
            %li
              - if user_signed_in?
                = link_to ' Logout', destroy_user_session_path, :method => :delete, class: 'fi-logout'
              - else
                = link_to 'Login', new_user_session_path
    = content_for?(:content) ? yield(:content) : yield 
    = javascript_include_tag "application"
