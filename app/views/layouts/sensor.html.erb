<%= inside_layout 'application' do %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-body">
            <ul class="nav nav-pills nav-stacked">
              <li>
              <%= link_to @sensor do %>
                <i class="icon mdi-editor-insert-chart"></i> Show Chart
              <% end %>
              </li>
              <li>
              <%= link_to sensor_records_url(@sensor) do %>
                <i class="icon mdi-editor-border-all"></i> Records
              <% end %>
              </li>
              <li>
              <%= link_to edit_sensor_url(@sensor) do %>
                <i class="icon mdi-action-settings"></i> Settings
              <% end %>
              </li>
              <li>
              <%= link_to sensor_records_url(@sensor, format: 'csv') do %>
                <i class="icon mdi-file-file-download"></i> Export
              <% end %>
              </li>
              <li>
              <%= link_to @sensor, method: :delete, confirm: 'Are you sure?' do %>
                <i class="icon mdi-action-delete"></i> Delete
              <% end %>
              </li>
            </ul>
          </div>
        </div>
        <% if (action_name == 'index' && controller_name == 'records') || (action_name == 'show' && controller_name == 'sensors') %>
        <div class="panel panel-default">
          <div class="panel-body">
            <%= form_tag '', method: :get, class: 'form-horizontal' do %>
              <div class="form-group">
                <%= label_tag :from, :from, class: 'control-label col-sm-3' %>
                <div class="col-sm-9">
                  <%= date_field_tag :from, @from, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= label_tag :to, :to, class: 'control-label col-sm-3' %>
                <div class="col-sm-9">
                  <%= date_field_tag :to, @to, class: 'form-control' %>
                </div>
              </div>
              <%= button_tag type: 'submit', class: 'btn btn-primary btn-block' do %>
                <i class="glyphicon glyphicon-filter"></i> Filter
              <% end %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
<% end %>

