<!DOCTYPE html>
<html>
<head>
  <title>OShome</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><i class="glyphicon glyphicon-home"></i> OShome</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active">
          <%- if user_signed_in? %>
          <%= link_to sensors_url do %>
            <i class="glyphicon glyphicon-dashboard"></i>
            <span>Sensor</span>
          <% end %>
          <% end %>
        </li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%- if user_signed_in? %>
        <li><%= link_to '', edit_user_registration_url, class: 'glyphicon glyphicon-user', 'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => "", 'data-original-title' => "Profile" %></li>
        <li><%= link_to '', destroy_user_session_url, method: :delete, class: 'glyphicon glyphicon-log-out', 'data-toggle' => "tooltip", 'data-placement' => "bottom", 'title' => "", 'data-original-title' => "Logout" %></li>
        <%- else %>
        <li><%= link_to 'Sign Up', new_user_registration_url %></li>
        <li><%= link_to 'Login', new_user_session_url %></li>
        <%- end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<%= content_for?(:content) ? yield(:content) : yield %>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
