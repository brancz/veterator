%h5 Resend confirmation instructions
%br/
= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  %div
    = f.label :login
    = f.email_field :login, :autofocus => true, placeholder: 'Username or Email'
  %div= f.submit "Resend", class: 'button'
= render "devise/shared/links"
