%h1 Edit profile
%br/
-if @user.errors.any?
  -@user.errors.full_messages.each do |error|
    %p.alert-box.info.radius
      = error
      = link_to '#', class: 'close' do
        &times;
= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  %div
    = f.label :username
    %br/
    = f.text_field :username, :autofocus => true, placeholder: 'Username'
  %div
    = f.label :email
    %br/
    = f.email_field :email, placeholder: 'username@example.com'
  - if devise_mapping.confirmable? && resource.pending_reconfirmation?
    %div
      Currently waiting confirmation for: #{resource.unconfirmed_email}
  %div
    = f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password, placeholder: 'Old password'
  %div= f.submit "Update", class: 'button'
