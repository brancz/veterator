.clearfix.panel
  .row
    .medium-9.columns
      %h1.text-center.show-for-small-only Sensor Units
      %h1.show-for-medium-up Sensor Units
    .medium-3.columns
      = link_to ' New Sensor Type', new_unit_path, class: 'button fi-plus right show-for-medium-up'
      = link_to ' New Sensor Type', new_unit_path, class: 'button fi-plus show-for-small-only'
= render 'layouts/flash'
.row
  .medium-12.columns
    %table
      %thead
        %tr
          %th Name
          %th Symbol
          %th Type
          %th
          %th
          %th
      %tbody
        - @units.each do |unit|
          %tr
            %td= unit.name
            %td= unit.symbol
            %td= unit.type.name
            %td= link_to 'Show', unit
            %td= link_to 'Edit', edit_unit_path(unit)
            %td= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' }
