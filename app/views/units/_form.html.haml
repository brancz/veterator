= form_for(@unit) do |f|
  - if @unit.errors.any?
    #error_explanation
      %h2
        = pluralize(@unit.errors.count, "error")
        prohibited this unit from being saved:
      %ul
        - @unit.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :name, placeholder: 'Unit name'
  .field
    = f.text_field :symbol, placeholder: 'Unit symbol'
  .field
    = select("unit", "type_id", Type.all.collect {|t| [ t.name, t.id ] }, {include_blank: 'None'})
  .actions
    = f.submit class: 'button'
